{% extends 'base.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6"><img src="..." class="img-fluid" alt="..."></div>
            <div class="col-lg-6 d-flex flex-column justify-content-between">
                <div class="d-flex flex-column">
                    <h1>{{ partition.nom }}</h1>
                    <p><small class="text-secondary">Par {{ partition.pseudo }}</small></p>
                    <p class="bg-secondary p-1 px-2 rounded align-self-start">{{ partition.style_nom }}</p>
                    <p>{{ partition.description }}</p>
                </div>
                <div class="mt-5">
                    <p class="fs-1">{{ partition.prix }} â‚¬</p>
                    <div class="mb-2">
                        <form action="controleur.php?page=panier&action=ajout_partition" method="POST">
                            <input type="hidden" name="id_partition" value="{{ partition.id }}">
                            <input type="submit" class="btn btn-primary" value="Ajouter au panier">
                        </form>
                    </div>
                    <div class="mt-3">
                        {% if (session.id == partition.id_auteur) or (session.role == 'administrateur') %}
                            <a href="controleur.php?page=partition&action=edit&id={{partition.id}}" class="btn btn-primary me-3">Modifier</a>
                            <a href="controleur.php?page=partition&action=delete&id={{partition.id}}" class="btn btn-danger">Supprimer</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
