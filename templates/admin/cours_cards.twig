{% extends "base.twig" %}

{% block main %}
	<div class="container">
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link" href="backoffice.php?page=instrument&action=read">Instruments</a>
			</li>
			{% if session.role == 'administrateur' %}
				<li class="nav-item">
					<a class="nav-link" href="backoffice.php?page=partition&action=read">Partitions</a>
				</li>
			{% endif %}
			<li class="nav-item">
				<a class="nav-link active" href="backoffice.php?page=cours&action=read">Cours</a>
			</li>
		</ul>
	</div>
	<div class="container mt-5">
		<form action="#" method="POST" name="filtersForm" onchange="filtersForm.submit();">
			<div class="row g-2">
				<div class="col-lg-2">
					<select class="form-control" id="typeFilter" name="typeFilter">
						<option value="">Type</option>
						{% for type in types %}
							<option value="{{type.id}}" {{ activeType == type.id ? 'selected' : ''}}>{{type.nom}}</option>
						{% endfor %}
					</select>
				</div>
				<div class="col-lg-2">
					<select class="form-control" id="order" name="order">
						<option value="">Trier par</option>
						<option value="prix_asc" {{ activeOrder == 'prix_asc' ? 'selected' : '' }}>Prix croissant</option>
						<option value="prix_desc" {{ activeOrder == 'prix_desc' ? 'selected' : '' }}>Prix décroissant</option>
					</select>
				</div>
				<div class="col-lg-2">
					<select class="form-control" id="difficulteFilter" name="difficulteFilter">
						<option value="">Difficulté</option>
						<option value="beginner" {{ activeDifficulte == 'beginner' ? 'selected' : '' }}>Débutant</option>
						<option value="intermediate" {{ activeDifficulte == 'intermediate' ? 'selected' : '' }}>Intermédiaire</option>
						<option value="advanced" {{ activeDifficulte == 'advanced' ? 'selected' : '' }}>Avancé</option>
					</select>
				</div>

				<div class="col-lg-6">
					<input type="search" id="search" name="search" placeholder="Rechercher par nom" class="form-control" value="{{activeSearch}}">
				</div>
			</div>
		</form>
		<div class="row row-cols-md-2 row-cols-lg-3 g-3 mt-3">
			{% for cours in cours %}
				<div class="col">
					<div class="card h-100">
						<div class="card-body d-flex flex-column">
							<h5 class="card-title">{{ cours.nom }}</h5>
							<p class="text-secondary">Par {{ cours.pseudo }}</p>
							<p class="bg-secondary p-1 px-2 rounded align-self-start">{{ cours.type_nom }}</p>

							<p class="card-text">{{ cours.description[:150] ~ (cours.description|length > 150 ? '...' : '') }}</p>
							<p class="fw-bold mt-auto">{{ cours.prix }} €</p>
							<a href="controleur.php?page=cours&action=read&id={{cours.id}}" class="btn btn-primary mt-2">Voir</a>
							{% if (session.role == 'administrateur') or (session.role == 'modérateur') %}
								<a href="backoffice.php?page=cours&action=edit&id={{cours.id}}" class="btn btn-secondary mt-2">Modifier</a>
								<a href="backoffice.php?page=cours&action=delete&id={{cours.id}}" class="btn btn-danger mt-2">Supprimer</a>
							{% endif %}
						</div>
					</div>
				</div>
			{% else %}
				<p>Aucun cours trouvé</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
