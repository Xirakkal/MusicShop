{% extends 'base.twig' %}

{% block main %}
	<div class="container">
		<div class="mb-5">
			<form action="#" method="POST" name="filtersForm" onchange="filtersForm.submit();">
				<div class="row g-2">
					<div class="col-lg-2">
						<select class="form-control" id="categorieFilter" name="categorieFilter">
							<option value="">Tous</option>
							{% for categorie in categories %}
								<option value="{{categorie.id}}" {{ activeCategorie == categorie.id ? 'selected' : ''}}>{{categorie.nom}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="col-lg-10">
						<input type="search" id="search" name="search" placeholder="Rechercher" class="form-control" value="{{activeSearch}}">
					</div>
				</div>
			</form>
		</div>
		<div class="row row-cols-md-2 row-cols-lg-2 g-2">
			{% for article in articles %}
				<div class="col">
					<div class="card h-100">
						<div class="card-body d-flex flex-column">
							<h5 class="card-title">{{article.titre}}</h5>
							<p>
								<small class="text-secondary">Par {{article.pseudo}}</small>
							</p>
							<p class="bg-secondary p-1 px-2 rounded align-self-start">{{article.nom}}</p>
							<p class="card-text">{{article.contenu[:200]}}</p>
							<div class="mt-auto d-flex">
								<a href="backoffice.php?page=blog&action=read&id={{article.id}}" class="btn btn-primary me-2">Voir</a>
								<a href="backoffice.php?page=blog&action=edit&id={{article.id}}" class="btn btn-secondary me-2">Modifier</a>
								<a href="backoffice.php?page=blog&action=delete&id={{article.id}}" class="btn btn-danger">Supprimer</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
