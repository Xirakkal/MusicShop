{% extends 'base.twig' %}

{% block main %}
    <div class="container">
        <h1>{{ titre }}</h1>
        <div class="card p-4">
            <p>Vous êtes sur le point de supprimer la partition suivante :</p>
            <ul>
                <li><strong>Titre :</strong> {{ partition.nom }}</li>
                <li><strong>Style :</strong> {{ partition.style_nom }}</li>
            </ul>
            <form action="backoffice.php?page=partition&action=delete&id={{ partition.id }}" method="post">
                <input type="hidden" name="confirm" value="yes">
                <button type="submit" class="btn btn-danger">Supprimer définitivement</button>
                <a href="backoffice.php?page=partition&action=read&id={{ partition.id }}" class="btn btn-secondary ms-2">Annuler</a>
            </form>
        </div>
    </div>
{% endblock %}
