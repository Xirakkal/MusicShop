{% extends "base.twig" %}

{% block main %}
	<div class="container">
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-link" href="backoffice.php?page=instrument&action=read">Instruments</a>
			</li>
			<li class="nav-item">
				<a class="nav-link active" href="backoffice.php?page=partition&action=read">Partitions</a>
			</li>
			{% if session.role == 'administrateur' %}
				<li class="nav-item">
					<a class="nav-link" href="backoffice.php?page=cours&action=read">Cours</a>
				</li>
			{% endif %}
		</ul>
	</div>
	<div class="container mt-5">
		<form action="#" method="POST" name="filtersForm" onchange="filtersForm.submit();">
			<div class="row g-2">
				<div class="col-lg-3">
					<select class="form-control" id="styleFilter" name="styleFilter">
						<option value="">Style</option>
						{% for style in styles %}
							<option value="{{style.id}}" {{ activeStyle == style.id ? 'selected' : ''}}>{{style.nom}}</option>
						{% endfor %}
					</select>
				</div>
				<div class="col-lg-2">
					<select class="form-control" id="order" name="order">
						<option value="">Trier par</option>
						<option value="date_desc" {{ activeOrder == 'date_desc' ? 'selected' : '' }}>Plus récent</option>
						<option value="date_asc" {{ activeOrder == 'date_asc' ? 'selected' : '' }}>Plus ancien</option>
					</select>
				</div>

				<div class="col-lg-7">
					<input type="search" id="search" name="search" placeholder="Rechercher par nom" class="form-control" value="{{activeSearch}}">
				</div>
			</div>
		</form>
		<div class="row row-cols-md-2 row-cols-lg-3 g-3 mt-3">
			{% for partition in partitions %}
				<div class="col">
					<div class="card h-100">
						<div class="card-body d-flex flex-column">
							<h5 class="card-title">{{ partition.nom }}</h5>
							<p class="text-secondary">Par {{ partition.pseudo }}</p>
							<p class="bg-secondary p-1 px-2 rounded align-self-start">{{ partition.style_nom }}</p>

							<p class="card-text">{{ partition.description[:150] ~ (partition.description|length > 150 ? '...' : '') }}</p>
							<p class="fw-bold mt-auto">{{ partition.prix }} €</p>
							<a href="controleur.php?page=partition&action=read&id={{partition.id}}" class="btn btn-primary mt-2">Voir</a>
							{% if (session.role == 'administrateur') or (session.role == 'modérateur') %}
								<a href="backoffice.php?page=partition&action=edit&id={{partition.id}}" class="btn btn-secondary mt-2">Modifier</a>
								<a href="backoffice.php?page=partition&action=delete&id={{partition.id}}" class="btn btn-danger mt-2">Supprimer</a>
							{% endif %}
						</div>
					</div>
				</div>
			{% else %}
				<p>Aucune partition trouvée</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
